<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/combare_button_background"

        >


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/compareImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/compare_icon"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/compareImage"
            app:layout_constraintTop_toTopOf="@+id/compareImage" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
